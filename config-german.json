{
    "name": "German",
    "n_gpu": 1,

    "arch": {
        "type": "TabularModel",
        "args": {
            "input_dim" : 61,
            "hidden_dim" : 64,
            "z_dim" : 2,
            "target_classes" : 1,
            "sensitive_classes" : 2
        }
    },
    "data_loader": {
        "type": "GermanDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0005,
            "amsgrad": true
        }
    },
    "loss": "loss",
    "metrics": [
        "accuracy", "sens_accuracy"
    ],
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 0,

        "tensorboard": true,

        "lambda_e" : 1.0,
        "lambda_od" : 0.01,
        "gamma_e" : 2.0,
        "gamma_od" : 1.4,
        "step_size" : 30
 


    }
}
