{
    "name": "Yale",
    "n_gpu": 1,

    "arch": {
        "type": "YaleModel",
        "args": {
            "input_dim" : 32256,
            "hidden_dim" : 100,
            "z_dim" : 100,
            "target_classes" : 38,
            "sensitive_classes" : 5
        }
    },
    "data_loader": {
        "type": "YaleDataLoader",
        "args":{
            "data_dir": "data/yale/",
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0.05,
            "amsgrad": true
        }
    },
    "loss": "loss",
    "metrics": [
        "accuracy", "sens_accuracy"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 0,
        "tensorboard": true,
        "lambda_e" : 1.0,
        "lambda_od" : 0.037,
        "gamma_e" : 2.0,
        "gamma_od" : 1.1,
        "step_size" : 64
    }
}
