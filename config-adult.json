{
    "name": "Adult",
    "n_gpu": 1,

    "arch": {
        "type": "TabularModel",
        "args": {
            "input_dim" : 108,
            "hidden_dim" : 64,
            "z_dim" : 2,
            "target_classes" : 1,
            "sensitive_classes" : 2
        }
    },
    "data_loader": {
        "type": "AdultDataLoader",
        "args":{
            "data_dir": "data/adult/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0005,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "sens_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 40,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,

        "lambda_e" : 0.5,
        "lambda_od" : 0.5,
        "gamma_e" : 1,
        "gamma_od" : 1,
        "step_size" : 1
 


    }
}
