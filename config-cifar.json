{
    "name": "Cifar10",
    "n_gpu": 1,

    "arch": {
        "type": "CifarModel",
        "args": {
            "input_dim" : 64,
            "hidden_dim" : [256, 128],
            "z_dim" : 2,
            "target_classes" : 1,
            "sensitive_classes" : 1
        }
    },
    "data_loader": {
        "type": "CIFAR10DataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0.01,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "sens_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 40,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,

        "lambda_e" : 1.0,
        "lambda_od" : 0.063,
        "gamma_e" : 1,
        "gamma_od" : 1.7,
        "step_size" : 256
 


    }
}